<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.project.healthMeter.fragment.PreScannerFragment"
    android:id="@+id/first_fragment_root_id">


    <RelativeLayout
        android:id="@+id/fragment_prescanner_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
      >
            <TextView
                android:id="@+id/mainactivity_empty"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center|center"
                android:lineSpacingExtra="-1dp"
                android:onClick="onFabClicked"
                android:text="@string/fragment_empty_text"
                android:textSize="16sp" />

            </RelativeLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/preScanbutton"
            android:layout_width="77dp"
            android:layout_height="80dp"
            android:text="@string/scanBarcode"
            android:onClick="onClicked"
            android:layout_gravity="bottom|right"
            app:backgroundTint="@color/glucosio_accent"
            android:src="@drawable/images"
            android:paddingBottom="20dp"
            android:layout_marginBottom="60dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/productButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/scanBarcode"
        android:onClick="clickTakePhoto"
        android:layout_alignStart="@+id/value_read"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"
        app:backgroundTint="@color/glucosio_accent"
        android:src="@drawable/text"/>

</FrameLayout>


