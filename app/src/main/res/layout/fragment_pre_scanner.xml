<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.project.healthMeter.fragment.PreScannerFragment"
    android:id="@+id/first_fragment_root_id">


    <android.support.v7.widget.RecyclerView

        android:orientation="vertical"
        android:background="@color/glucosio_light_grey_background"
        android:id="@+id/fragment_preScanner_recycler_view"
        android:scrollbars="vertical"
        android:clickable="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:focusable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_below="@+id/fragment_preScanner_recycler_view">

</LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/preScannerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scanBarcode"
        android:onClick="clickGetProduct"
        android:layout_alignStart="@+id/value_read"
        android:layout_gravity="left|bottom"
        android:layout_margin="16dp"
        app:backgroundTint="@color/glucosio_accent"
        android:src="@drawable/images"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/productButton"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:text="@string/scanBarcode"
        android:onClick="clickTakePhoto"
        android:layout_alignStart="@+id/value_read"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"
        app:backgroundTint="@color/glucosio_accent"
        android:src="@drawable/text"/>

</FrameLayout>



