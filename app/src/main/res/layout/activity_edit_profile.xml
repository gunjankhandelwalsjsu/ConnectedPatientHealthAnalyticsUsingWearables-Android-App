<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.project.healthMeter.activity.EditProfileActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dip"
            android:weightSum="1">

            <!-- View Title Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="@string/EditProfile_title"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="chooseImageSource"
                android:src="@drawable/male" />

            <TextView
                android:id="@+id/note"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:text="Click on the image to change it"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <!-- FirstName Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/fname" />
            <!-- FirstName TextField -->



            <EditText
                android:id="@+id/editfName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:hint="Enter your First Name"/>



            <!-- Name Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/lname" />
            <!-- FirstName TextField -->



            <EditText
                android:id="@+id/editlName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:hint="Enter your Last Name"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="Gender"  />

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:checked="true"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="Select Date of Birth"  />
            <DatePicker
                android:id="@+id/bdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:startYear="1930"
                android:calendarViewShown="false"

                />


            <!-- Email Label -->



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/email" />
            <!-- Email TextField -->

            <TextView
                android:id="@+id/editEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />

            <!-- Password Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="@string/pwd" />
            <!-- Password TextField -->

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Confirm Password"
                android:inputType="textPassword" />



            <!-- Phone Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="@string/phone"
                android:inputType="phone"/>
            <!-- Phone TextField -->

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone number"
                android:inputType="phone" />

            <!-- Street address Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="@string/streetAddress" />
            <!-- Street address  TextField -->

            <EditText
                android:id="@+id/editStreetAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Street Address"
                />
            <!-- State Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="@string/state" />
            <!-- state  TextField -->

            <EditText
                android:id="@+id/editState"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your state"
                />
            <!-- City Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="@string/city" />
            <!-- City TextField -->

            <EditText
                android:id="@+id/editCity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your city"
                />
            <!-- Zipcode Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="@string/zipcode" />
            <!-- Zipcode TextField -->

            <EditText
                android:id="@+id/editZipcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your zipcode"
                />



            <!-- Error message -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="Allergy"  />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:padding="16dp">
    <TableRow>


    <CheckBox android:id="@+id/soyabean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soyabean"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/milk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/milk"
                    android:onClick="onCheckboxClicked"
                    android:checked="false" />
    </TableRow>
    <TableRow>
                <CheckBox android:id="@+id/gluten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gluten"
                    android:onClick="onCheckboxClicked"/>


                <CheckBox android:id="@+id/egg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/egg"
                    android:onClick="onCheckboxClicked"/>
    </TableRow>
    <TableRow>
                <CheckBox android:id="@+id/mustard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mustard"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/peanuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/peanuts"
                    android:onClick="onCheckboxClicked"/>
    </TableRow>
    <TableRow>

                <CheckBox android:id="@+id/fish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fish"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/nuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nuts"
                    android:onClick="onCheckboxClicked"/>
    </TableRow>
    <TableRow>
                <CheckBox android:id="@+id/coconut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coconut"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/seasmeSeeds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seasmeSeeds"
                    android:onClick="onCheckboxClicked"/>
    </TableRow>
    <TableRow>
                <CheckBox android:id="@+id/corn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/corn"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/flour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flour"
                    android:onClick="onCheckboxClicked"/>
    </TableRow>
    <TableRow>
                <CheckBox android:id="@+id/wheyPowder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wheyPowder"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/cornStarch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cornStarch"
                    android:onClick="onCheckboxClicked"/>
    </TableRow>
    <TableRow>
                <CheckBox android:id="@+id/celery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/celery"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/candelnut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/candelnut"
                    android:onClick="onCheckboxClicked"/>
    </TableRow>

</TableLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="Disease"  />
            <CheckBox android:id="@+id/diabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diabetes"
                android:onClick="onDiseaseCheckboxClicked"/>
            <CheckBox android:id="@+id/BloodPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bloodPressure"
                android:onClick="onDiseaseCheckboxClicked"/>







            <TextView
                android:id="@+id/DoctorInfo"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dip"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:text="Doctor Information:"
                android:textAppearance="?android:attr/textAppearanceMedium" />



            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your doc..."
                android:onClick="spinners"/>


            <TextView
                android:id="@+id/d_nameT"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/d_phoneT"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/d_mailT"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <Button
                android:id="@+id/update_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:onClick="update_profile"
                android:text="Save" />

            <TextView
                android:id="@+id/update_profile_error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
